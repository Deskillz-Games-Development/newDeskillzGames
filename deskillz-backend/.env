# ===========================================
# DESKILLZ BACKEND - LOCAL DEVELOPMENT
# ===========================================

# Application
NODE_ENV=development
PORT=3001
API_PREFIX=api/v1

# Database (PostgreSQL via Docker)
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/deskillz?schema=public"

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# JWT Authentication
JWT_SECRET=dev-jwt-secret-change-in-production-abc123xyz789
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=dev-refresh-secret-change-in-production-xyz789abc123
JWT_REFRESH_EXPIRES_IN=30d

# Wallet Authentication (SIWE - Sign In With Ethereum)
SIWE_DOMAIN=localhost
SIWE_STATEMENT=Sign in to Deskillz.games

# Blockchain RPC URLs (use free tier or your own keys)
ETH_RPC_URL=https://eth.llamarpc.com
POLYGON_RPC_URL=https://polygon-rpc.com
BSC_RPC_URL=https://bsc-dataseed.binance.org
ARBITRUM_RPC_URL=https://arb1.arbitrum.io/rpc
TRON_RPC_URL=https://api.trongrid.io

# Smart Contract Addresses (Tron - TRC20)
TRON_USDT_CONTRACT=TR7NHqjeKQxGTCi8q8ZY4pL8otSzgjLj6t
TOURNAMENT_ESCROW_CONTRACT=

# Platform Wallet (for receiving fees) - LEAVE EMPTY IN DEV
PLATFORM_WALLET_ADDRESS=
PLATFORM_WALLET_PRIVATE_KEY=

# Rate Limiting
THROTTLE_TTL=60
THROTTLE_LIMIT=100

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:5173,https://deskillz.games,https://www.deskillz.games

# Socket.io
SOCKET_PORT=3002

# Platform Settings
PLATFORM_FEE_PERCENT=10
MIN_ENTRY_FEE_USD=1
MAX_ENTRY_FEE_USD=1000

# ===========================================
# AI ASSISTANT
# ===========================================

# OpenAI API Key (for GPT-4, Whisper, TTS)
# Get your key at: https://platform.openai.com/api-keys
OPENAI_API_KEY=

# Claude API Key (fallback AI)
# Get your key at: https://console.anthropic.com/
CLAUDE_API_KEY=
