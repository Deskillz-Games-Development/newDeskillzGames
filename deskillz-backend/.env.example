# ===========================================
# DESKILLZ BACKEND ENVIRONMENT CONFIGURATION
# ===========================================

# Application
NODE_ENV=development
PORT=3001
API_PREFIX=api/v1

# Database (PostgreSQL)
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/deskillz?schema=public"

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# JWT Authentication
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=your-refresh-secret-key-change-in-production
JWT_REFRESH_EXPIRES_IN=30d

# Wallet Authentication (SIWE - Sign In With Ethereum)
SIWE_DOMAIN=deskillz.games
SIWE_STATEMENT=Sign in to Deskillz.games

# Blockchain RPC URLs
ETH_RPC_URL=https://mainnet.infura.io/v3/YOUR_INFURA_KEY
POLYGON_RPC_URL=https://polygon-rpc.com
BSC_RPC_URL=https://bsc-dataseed.binance.org
ARBITRUM_RPC_URL=https://arb1.arbitrum.io/rpc
TRON_RPC_URL=https://api.trongrid.io

# Smart Contract Addresses (Tron - TRC20)
TRON_USDT_CONTRACT=TR7NHqjeKQxGTCi8q8ZY4pL8otSzgjLj6t
TOURNAMENT_ESCROW_CONTRACT=

# Platform Wallet (for receiving fees)
PLATFORM_WALLET_ADDRESS=
PLATFORM_WALLET_PRIVATE_KEY=

# AWS S3 / Cloudflare R2 (File Storage)
S3_BUCKET=deskillz-assets
S3_REGION=us-east-1
S3_ACCESS_KEY=
S3_SECRET_KEY=
S3_ENDPOINT=  # Leave empty for AWS, set for R2

# Rate Limiting
THROTTLE_TTL=60
THROTTLE_LIMIT=100

# CORS
CORS_ORIGINS=http://localhost:3000,https://deskillz.games,https://www.deskillz.games

# Socket.io
SOCKET_PORT=3002

# Platform Settings
PLATFORM_FEE_PERCENT=10
MIN_ENTRY_FEE_USD=1
MAX_ENTRY_FEE_USD=1000
